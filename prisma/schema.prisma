generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model OptionPosition {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Wheel cycle tracking
  wheelCycleName        String?
  continueExistingWheel Boolean  @default(false)

  // Position details - Required fields
  openDate     DateTime
  stockTicker  String
  expiration   DateTime
  type         String   // "put" or "call"
  contracts    Int
  strike       Float
  premium      Float

  // Stock ownership tracking
  ownsStock            Boolean   @default(false) // True if you own the underlying stock
  stockCostBasis       Float?    // Cost basis per share if you own the stock
  stockQuantity        Int?      // Number of shares owned (typically contracts Ã— 100)
  stockAcquisitionDate DateTime? // When stock was acquired via assignment
  stockSalePrice       Float?    // Price per share when stock was called away
  stockSaleDate        DateTime? // When stock was sold (called away)

  // Status and assignment
  assigned Boolean @default(false)
  status   String  @default("open") // "open" | "closed" | "assigned"

  // Optional closing details
  openFees           Float?
  closeDate          DateTime?
  premiumPaidToClose Float?
  closeFees          Float?
  notes              String?

  // Calculated fields (stored for performance)
  realizedPL        Float? // Total P/L: Premium + Stock components
  premiumRealizedPL Float? // Premium component of realized P/L
  stockRealizedPL   Float? // Stock component of realized P/L
  unrealizedPL      Float? // Calculated for open positions with current price

  @@index([stockTicker])
  @@index([status])
  @@index([wheelCycleName])
}